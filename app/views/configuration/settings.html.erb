
<div id="content-header">
  <%= image_tag("/images/show_settings.png") %>
  <h1><%= t('configuration_text') %></h1>
  <h3><%= t('general_settings') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <%= error_messages_for :school_detail %>

  <%= form_for(:fedena_configuration,:html=> {:multipart=>true}) do |c| %>
    <div class="box">
      <div class="label-field-pair">
        <label for="FedenaConfiguration_currency_type"><%= t('school_college_name') %></label>
        <div class="text-input-bg">
          <%= text_field :fedena_configuration, :institution_name, :value => @config[:institution_name] %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="FedenaConfiguration_currency_type"><%= t('school_college_address') %></label>
        <div class="text-input-bg">
          <%= text_field :fedena_configuration, :institution_address, :value => @config[:institution_address] %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="FedenaConfiguration_currency_type"><%= t('school_college_phone') %></label>
        <div class="text-input-bg">
          <%= text_field :fedena_configuration, :institution_phone_no, :value => @config[:institution_phone_no] %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="FedenaConfiguration_student_attendance_type"><%= t('student_attendance_type') %></label>
        <div class="text-input-bg">
          <%= select :fedena_configuration, :student_attendance_type, [["#{t('configuration.daily_text')}", "Daily"], ["#{t('configuration.subject_wise_text')}", "SubjectWise"]],
            :selected => @config[:student_attendance_type] %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="FedenaConfiguration_currency_type"><%= t('finance_year_start_date') %></label>
        <div class="text-input-bg">
          <%= text_field_tag 'FedenaConfiguration[financial_year_start_date]', I18n.l(@config[:financial_year_start_date].to_date,:format=>:default),
            :year_range => 15.years.ago..5.years.from_now, :readonly=>true, :popup=>"force", class: 'date_picker' %>
        </div>
      </div>

      <div class="label-field-pair">
        <label for="FedenaConfiguration_currency_type"><%= t('finance_year_end_date') %></label>
        <div class="text-input-bg">
          <%= text_field_tag 'FedenaConfiguration[financial_year_end_date]',  I18n.l(@config[:financial_year_end_date].to_date,:format=>:default),
            :year_range => 15.years.ago..5.years.from_now, :readonly=>true, :popup=>"force", class: 'date_picker' %>
        </div>
      </div>

      <div class="label-field-pair">
        <label for="FedenaConfiguration_student_attendance_type"><%= "#{t('language') } " %></label>
        <div class="text-input-bg">
          <%= select :fedena_configuration, :locale, available_language_options,
            :selected => @config[:locale] %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="FedenaConfiguration_student_attendance_type">Time Zone</label>
        <div class="text-input-bg">
          <%= select :fedena_configuration, :time_zone, @time_zones.map{|t| ["#{t.name}(#{t.code}) - GMT#{t.difference_type}#{Time.at(t.time_difference).gmtime.strftime('%R')}",t.id]},:selected =>@config[:time_zone].to_i  %>
        </div>
      </div>

      <div class="label-field-pair">
        <label for="FedenaConfiguration_default_country"><%= t('country') %></label>
        <div class="text-input-bg">
          <% selected_value = @config[:default_country].present? ? @config[:default_country].to_i : 76 %>
          <%= select :fedena_configuration, :default_country, @countries.map {|c| [c.name, c.id]}, :selected=> selected_value.to_i %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="FedenaConfiguration_currency_type"><%= t('currency_type') %></label>
        <div class="text-input-bg">
          <%= text_field :fedena_configuration, :currency_type, :value => @config[:currency_type] %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="FedenaConfiguration_currency_type"><%= t('upload_logo') %> (<%= t('max_size') %>, <%= t('height_width') %>)</label>
        <div class="text-input-bg">
          <%= file_field 'school_detail','school_logo', :size=>12 %>
        </div>
      </div>
      <div class="label-field-pair">
        <label for="FedenaConfiguration_currency_type"><%= t('network_state') %></label>
        <div class="text-input-bg">
          <%= select :fedena_configuration, :network_state, [["#{t('online')}","Online"],["#{t('offline')}","Offline"]],:selected =>@config[:network_state] %>
        </div>
      </div>
      <div class="grades">
        <div class="label-field-pair">
          <label for="FedenaConfiguration_grading_systems"><%= t('include_grading_systems') %></label>
        </div>
        <div class="fee_category_scroll">
          <div class="sel-list">
            <%= t('select') %>: <%= link_to_function t('all'), "$$('input.batches_box').each(function(checkbox) { checkbox.checked = true; });" %>,
            <%= link_to_function t('none'), "$$('input.batches_box').each(function(checkbox) { checkbox.checked = false; });" %>
          </div>
          <% @grading_types.each do |key,val| %>
            <div class="each_batch">
              <%= check_box :fedena_configuration, val.underscore , :checked => (@enabled_grading_types.include? key),:class=>'batches_box' %> <label for="FedenaConfiguration_<%= val.underscore %>"><%= val %></label>
            </div>
          <% end %>
        </div>
      </div>

      <% FedenaPlugin::REGISTERED_HOOKS[:general_settings_form].each do |mod| %>
        <%= render :partial=>mod.camelize.constantize.send("general_settings_form") %>
      <% end %>
      <div class="extender"></div>
      <br/>
      <% if @config[:admission_number_auto_increment] == '1' %>
        <%= check_box :fedena_configuration, :admission_number_auto_increment, :checked => true %><%= t('student_admission_auto') %>
      <% else %>
        <%= check_box :fedena_configuration, :admission_number_auto_increment, :checked => false %><%= t('student_admission_auto') %>
      <% end %>
      <br/>
      <% if FedenaConfiguration.available_modules.include?('HR') %>
        <% if @config[:employee_number_auto_increment] == '1' %>
          <%= check_box :fedena_configuration, :employee_number_auto_increment, :checked => true %> <%= t('employee_admission_auto') %>
        <% else %>
          <%= check_box :fedena_configuration, :employee_number_auto_increment, :checked => false %><%= t('employee_admission_auto') %>
        <% end %>
      <% end %>
      <br/>
      <% if @config[:first_time_login_enable] == '1' %>
        <%= check_box :fedena_configuration, :first_time_login_enable, :checked => true %><%= t('enable_first_time_login') %>
      <% else %>
        <%= check_box :fedena_configuration, :first_time_login_enable, :checked => false %><%= t('enable_first_time_login') %>
      <% end %>
      <% FedenaPlugin::REGISTERED_HOOKS[:general_settings_checkbox].each do |mod| %>
        <br/>
        <%= render :partial=>mod.camelize.constantize.send("general_settings_checkbox") %>
      <% end %>
      <div id="submit-button">
        <%= submit_tag "â–º #{t('update')}" %>
      </div>

    <% end %>

  </div>
</div>
